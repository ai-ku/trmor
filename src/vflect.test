#!/usr/local/bin/xfst -f

clear

read lexc vflect.lexc
upper net
substitute label "+Past" for "+Past2"
substitute label "+Narr" for "+Narr2"
substitute label "+Imp" for "+Imp2"
define vflect
define model [ "+Verb" ["+Pos"|"+Neg"] vflect ];

load tfnowords.fst
define tf

read regex < vflect.extra.known
read regex [ model - tf ];
minus net
print words > vflect.extra
pop

read regex [ "+Verb" \"^DB"+ ];		!! we are missing some DBs here
load Milliyet.fst
intersect net
define test

read regex < vflect.missing.known
read regex [ test - model ];
minus net
print words > vflect.missing
pop
