clear
read regex [
    {+Noun} -> "+Noun",
    {+P1} -> "+P1",
    {+P2} -> "+P2",
    {+P3} -> "+P3",
    {+PL} -> "+PL",
    {+TM} -> "+TM",

    {+CV} -> "+CV",
    {+VF} -> "+VF",
    {+VD} -> "+VD",
    {+CD} -> "+CD",
    {+SU} -> "+SU",

    "	" -> 0
];
read text < dict.txt
compose net
lower net
read regex ~[ %# ?* ];
intersect net
define nouns

# read regex [ nouns "+A3sg""+P1pl""+Nom" ];
read regex [nouns Nflect2]
& ~$["+PL" \"^DB"* "+A3sg"]
& ~$["+P1" \"^DB"* ["+A3pl"|"+A3sg"] \"+P1sg"]
& ~$["+P2" \"^DB"* ["+A3pl"|"+A3sg"] \"+P2sg"]
& ~$["+A3pl""+Pnon""+Nom""^DB""+Verb""+Zero""+Pres""+A3pl""+Cop"]
& ~$["+TM" ?* "+Loc""^DB""+Adj""+Rel"] # this rules out sabahki trying to fix sabahtaki
& ~$["+PL" ?* "^DB""+Verb""+Zero""+Pres""+A3pl"]
;
upper net
define feat

define model [ feat .o. mlex .o. phon ];
push model
lower net
define test

load tfeaturesulx.fst
define tf

read regex [ tf .o. test ];
lower net
define corr

read regex [ test - corr ];
print words > phon.extra
print random-words 5000 > phon.random

clear
push model
save stack "phon.fst"

